- @title = 'Trip Details'
- content_for :header do
  = link_to "My Trips", trips_path, :role => 'button'
  = link_to "Add Detail", new_trip_trip_detail_path(@trip), :role => 'button'

%h4= @trip.name
%p= @trip.description
%h3 Details
%ul{:'data-role' => 'listview', :'data-inset' => true}
  = render :partial => 'trip/details/detail', :collection => @trip.trip_details
    
